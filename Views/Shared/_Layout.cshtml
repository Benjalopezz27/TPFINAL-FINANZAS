<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Administrador de Gastos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- 🔹 Barra de navegación -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-action="Index">💸 AdminGastos</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Expenses" asp-action="Index">Gastos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Expenses" asp-action="Create">Agregar Gasto</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- 🔹 Contenido principal -->
    <main class="flex-grow-1 container my-4">
        @RenderBody()
    </main>

    <!-- 🔹 Footer al fondo -->
    <footer class="footer text-center text-white py-3 mt-auto border-top bg-dark">
        <div class="container">
            <small>&copy; @DateTime.Now.Year - Administrador de Gastos Personales</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>