@model ExpenseDto
@{
    ViewData["Title"] = "Detalles del Gasto";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">@Model.Amount.ToString("C2")</dd>

        <dt class="col-sm-2">Categoría</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Notas</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
    </dl>
</div>
<div class="gap-2">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>