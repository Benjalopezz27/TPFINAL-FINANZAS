@model ExpenseDto
@{
    ViewData["Title"] = "Eliminar Gasto";
}

<h2>¿Seguro que deseas eliminar este gasto?</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">@Model.Amount.ToString("C2")</dd>

        <dt class="col-sm-2">Categoría</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>